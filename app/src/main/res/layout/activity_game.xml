        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/tarjeta5"
                style="@style/btnJuego"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/tarjeta6"
                style="@style/btnJuego"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/tarjeta7"
                style="@style/btnJuego"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/tarjeta8"
                style="@style/btnJuego"
                android:onClick="onClick"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/tarjeta9"
                style="@style/btnJuego"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/tarjeta10"
